<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loaderContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgSpinnerIcon"
            android:layout_width="@dimen/dimen100"
            android:layout_height="@dimen/dimen100"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/weather"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen50"
            android:layout_marginTop="@dimen/dimen50"
            android:layout_marginEnd="@dimen/dimen50"
            android:gravity="center"
            android:text="@string/splash_screen_title"
            android:textSize="@dimen/textSize20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSpinnerIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>